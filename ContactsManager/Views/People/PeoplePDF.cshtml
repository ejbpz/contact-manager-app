@model IEnumerable<PersonResponse>
@{
    Layout = null;
    ViewBag.Title = "List of People";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap">

<style>
    * {
        font-family: "Poppins";
    }

    body {
        font-size: 14px;
        color: #333;
        margin: 20px;
        background: white;
    }

    h1, h2, h3 {
        margin-bottom: 10px;
        font-weight: bold;
        color: #222;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        font-size: 13px;
        border-radius: 8px;
    }

    th, td {
        border: 1px solid  black;
        padding: 8px;
        text-align: center;
    }

    th {
        background: #43A490;
        font-weight: bold;
        color: white;
    }

    .p-3 {
        padding: 1rem;
    }

    .text-center {
        text-align: center;
    }

    .text-md {
        font-size: 14px;
    }
</style>

<main>
    <h1>List of people</h1>

    <table>
        <thead>
            <tr class="text-md">
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Date of Birth</th>
                <th>Country</th>
                <th>Address</th>
                <th>Receives Newsletter</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PersonResponse person in Model)
            {
                <tr class="text-center">
                    <td class="p-3">@person.PersonName</td>
                    <td class="p-3">@person.Age</td>
                    <td class="p-3">@person.Gender</td>
                    <td class="p-3">@person.PersonEmail</td>
                    <td class="p-3">@person.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                    <td class="p-3">@person.CountryName</td>
                    <td class="p-3">@person.Address</td>
                    <td class="p-3">@(person.IsReceivingNewsLetters ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
</main>