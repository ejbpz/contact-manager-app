@{
    ViewBag.CurrentSortOrder = (ViewBag.CurrentSortOrder is SortOrderOptions.Ascending)
        ? SortOrderOptions.Descending
        : SortOrderOptions.Ascending;
}

<th>
    <a href="~/people?
        searchBy=@(ViewBag.CurrentSearchBy)&searchQuery=@(ViewBag.CurrentSearchQuery)&sortBy=@(ViewBag.NameOf)&sortOrderOptions=@(ViewBag.CurrentSortOrder)">@ViewBag.HeaderName
    </a>
    <i class="
        fa-solid fa-arrow-@(ViewBag.CurrentSortOrder is SortOrderOptions.Ascending ? "up" : "down") @(ViewBag.CurrentSortBy == ViewBag.NameOf ? "show" : "hidden")">
    </i>
</th>