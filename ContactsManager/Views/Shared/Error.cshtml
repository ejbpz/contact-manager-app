@model string?

@{
    ViewBag.Title = "Error";
}

<div class="text-center flex flex-col justify-center items-center w-full h-full">
    <h1 class="font-bold text-2xl">Error</h1>
    @if(Model is not null)
    {
        <h2 class="text-xl text-red-500">@Model</h2>
    } 
    else
    {
        <h2 class="text-xl text-red-500">Error ocurred during execution</h2>
    }
</div>