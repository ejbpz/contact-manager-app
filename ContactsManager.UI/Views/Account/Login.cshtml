@model LoginRequest
@{
    ViewBag.Title = "Login";
}

<section class="container mx-auto max-w-96 sm:max-w-[600px] flex flex-col justify-center items-center h-screen w-full">
    <div>
        Not yet registered? <a asp-action="Register" asp-controller="Account" class="font-semibold hover:underline">Register</a>
        <h2 class="my-5 font-semibold text-2xl">Login</h2>
    </div>

    <form asp-controller="Account" asp-action="Login" method="post">
        @* Person Email *@
        <div class="rounded-xl bg-white p-4 shadow-lg">
            <label asp-for="Email" class="font-semibold">
                * Email
            </label>
            <div class="relative flex min-w-50 items-center rounded-sm border-gray-200 border-[1px] bg-gray-200 px-1 py-[15px]">
                <input asp-for="Email" placeholder="email@example.com" class="absolute w-full focus:outline-none" />
                <span asp-validation-for="Email" class="errors hidden"></span>
            </div>
        </div>

        @* Person Password *@
        <div class="rounded-xl bg-white p-4 shadow-lg mt-4">
            <label asp-for="Password" class="font-semibold">
                * Password
            </label>
            <div class="relative flex min-w-50 items-center rounded-sm border-gray-200 border-[1px] bg-gray-200 px-1 py-[15px]">
                <input asp-for="Password" class="absolute w-full focus:outline-none" />
                <span asp-validation-for="Password" class="errors hidden"></span>
            </div>
        </div>

        @* Register Button *@
        <div class="mt-4">
            <div class="block w-20 h-10 cursor-pointer rounded-sm border-[1px] border-[#43A490] bg-[#43A490] px-1 py-[5.3px] font-medium text-white">
                <button type="submit" class="h-full w-full cursor-pointer">Login</button>
            </div>

            <div asp-validation-summary="All">
                @if (ViewBag.Errors is not null)
                {
                    <ul>
                        @foreach (string error in ViewBag.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </form>
</section>